<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Platform Logo or Founder Image -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/about_me"
            android:contentDescription="Platform Logo or Founder Image"
            android:layout_marginBottom="16dp"
            android:padding="8dp"/>

        <!-- Platform Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="All-In-One Learning Platform"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_marginBottom="8dp"/>

        <!-- Brief Introduction -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to our comprehensive platform for learning programming skills, founded by RajuReddy. Our mission is to provide a one-stop solution for all your programming education needs."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:background="@drawable/rounded_background"/>

        <!-- Founder Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About the Founder"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RajuReddy, a passionate programmer and educator, established this platform to help individuals enhance their skills in various programming domains. With years of experience in the field, Raju aims to make high-quality education accessible to everyone."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:background="@drawable/rounded_background"/>

        <!-- Platform's Mission -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Mission"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our mission is to provide a one-stop solution for learning programming. We offer courses in DSA, Android development, Web Development, Machine Learning, Blockchain, CyberSecurity, and more. Our goal is to equip learners with the skills they need to succeed in the tech industry."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:background="@drawable/rounded_background"/>

        <!-- Contact Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For more information, feel free to reach out to us at: rajureddy1408@gmail.com"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:background="@drawable/rounded_background"/>

    </LinearLayout>
</ScrollView>
